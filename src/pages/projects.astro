---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer/index.jsx';
import Nav from '../components/Nav/index.jsx';
import PortfolioProjectCard from '../components/PortfolioProjectCard/index.jsx';

const projects = [
  {repo: 'material-yew', username: 'hamza1311'},
  {repo: 'dear-diary-web', username: 'hamza1311'},
  {repo: 'gloo', username: 'rustwasm'},
]
---

<html lang="en">
  <head>
    <MainHead title="All Projects | Muhammad Hamza" />
    <style lang="scss">
      .grid {
        display: grid;
        grid-gap: 3rem;
        grid-template-columns: repeat(2, 1fr);
      }

      a {
        border-radius: 1em;
        border: 1px solid rgba(0, 0, 0, 0.4);
        padding: 0.5em
      }
    </style>
  </head>
  <body>
    <Nav />
    <div class="wrapper">
      <h1 class="title mt4 mb4">All Projects</h1>
      <div class="grid">
        {projects.map(({username, repo}) => (
          <a href={`https://github.com/${username}/${repo}`}>
            <img src={`https://github-readme-stats.vercel.app/api/pin?username=${username}&repo=${repo}&hide_border=true`}/>
          </a>
        ))}
      </div>
    </div>
    <Footer />
  </body>
</html>
